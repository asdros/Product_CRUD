@model IEnumerable<Product_CRUD.Models.Entities.Category>

@{
    ViewData["Title"] = "Kategorie";
}

<h1>Kategorie</h1>

<p>
    <a asp-action="Create">Utwórz nową kategorię</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nazwa kategorii
            </th>
            <th>Akcja</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Usuwanie</a>
            </td>
        </tr>
}
    </tbody>
</table>
