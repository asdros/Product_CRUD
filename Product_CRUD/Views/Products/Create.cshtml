@model Product_CRUD.Models.Entities.Product

@{
    ViewData["Title"] = "Dodawanie nowego produktu";
}

<h4>Produkt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nazwa</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Kategoria</label>
                <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TaxId" class="control-label">Podatek VAT</label>
                <select asp-for="TaxId" class ="form-control" asp-items="ViewBag.TaxId"></select>
            </div>
            <div class="form-group">
                <label asp-for="NetPrice" class="control-label">Cena netto</label>
                <input asp-for="NetPrice" class="form-control" id="price" />
                <span asp-validation-for="NetPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj do bazy" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
              $(document).ready(function () {
        validatePriceInput();
    });
    </script>
}
