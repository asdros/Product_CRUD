@model Product_CRUD.Models.Entities.Product

<div class="row">
	<div class="col-md-4">
		<h6 class="bg-warning text-white text-center m-2 p-2">Edycja produktu</h6>
		<hr />
		<table cellpadding="0" cellspacing="0" border="0">
			<form asp-action="Edit">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<input type="hidden" asp-for="Id" />
				<div class="form-group">
					<label asp-for="Name" class="control-label">Nazwa produktu</label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="CategoryId" class="control-label">Kategoria</label>
					<select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
					<span asp-validation-for="CategoryId" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="TaxId" class="control-label">Podatek VAT</label>
					<select asp-for="TaxId" class="form-control" asp-items="ViewBag.TaxId"></select>
					<span asp-validation-for="TaxId" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="NetPrice" class="control-label">Cena</label>
					<input asp-for="NetPrice" class="form-control" id="price"/>
					<span asp-validation-for="NetPrice" class="text-danger"></span>
				</div>
				<div class="form-group">
					<input type="submit" value="Zapisz" class="btn btn-primary" />
				</div>
			</form>
		</table>
	</div>
</div>

<div>
	<a asp-action="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
			  $(document).ready(function () {
		validatePriceInput();
	});
</script>
}
